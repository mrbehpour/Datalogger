<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <!-- film -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginLeft="16dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="horizontal"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/video_camera"
                        android:tint="@color/grey_300"/>
                </LinearLayout>
                <!-- line -->
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/grey_400">
                </LinearLayout>
                <!-- buttons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">
                    <!-- record -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/llVideo"
                        android:layout_weight="0.5"
                        android:background="@drawable/listitem_background"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btRecordVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"

                            android:scaleType="centerCrop"
                            android:src="@drawable/video_record"
                            android:tint="@color/red_A300"/>
                    </LinearLayout>
                    <!-- play -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/llPlay"
                        android:layout_weight="0.5"
                        android:background="@drawable/listitem_background"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btPlayVideo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video_play"
                            android:tint="@color/grey_1000"/>
                    </LinearLayout>
                </LinearLayout>
                <!-- preview -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_gravity="center_horizontal|clip_horizontal"
                    android:layout_height="match_parent"
                    android:background="@color/grey_500">
                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- photo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"

        android:layout_marginLeft="16dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:cardElevation="2dp"

            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/camera_xml"
                        android:tint="@color/grey_300"/>
                </LinearLayout>
                <!-- line -->
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/grey_400">
                </LinearLayout>
                <!-- buttons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/listitem_background"
                    android:orientation="vertical">
                    <!-- record -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/llCamera"
                        android:layout_weight="0.5"
                        android:background="@drawable/listitem_background"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btCamera"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"

                            android:src="@drawable/camera_shutter"
                            android:tint="@color/grey_1000"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.25"
                        android:orientation="vertical">
                    </LinearLayout>
                </LinearLayout>
                <!-- preview -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="match_parent"
                    android:background="@color/grey_500">
                    <ImageView
                        android:id="@+id/imgTakePhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- voice -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:layout_marginTop="16dp"
        android:orientation="vertical"

        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/listitem_background"
            app:cardElevation="2dp"
            app:cardCornerRadius="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp">
                <!-- icon -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/microphone_xml"
                        android:tint="@color/grey_300"/>
                </LinearLayout>
                <!-- line -->
                <LinearLayout
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@color/grey_400">
                </LinearLayout>
                <!-- buttons -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:layout_marginLeft="8dp"
                    android:orientation="vertical">
                    <!-- record -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/btnRecord"
                        android:background="@drawable/listitem_background"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btRecordVoice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"

                            android:src="@drawable/video_record"
                            android:tint="@color/red_A300"/>
                    </LinearLayout>
                    <!-- play -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:id="@+id/btnStop"
                        android:background="@drawable/listitem_background"
                        android:layout_weight="0.5"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/btPlayVoice"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"

                            android:src="@drawable/video_play"
                            android:tint="@color/grey_1000"/>

                    </LinearLayout>

                </LinearLayout>
                <!-- preview -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:background="@color/grey_500">
                    <ImageView
                        android:id="@+id/imgSoundWaves"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.8"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sound_waves"
                        android:tint="@color/grey_100"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        >
                        <Chronometer
                            android:textColor="@color/cardview_dark_background"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:id="@+id/recordSound_chrTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>