<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/llUpdateVersion"
    android:background="@drawable/login_gradient"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtVersion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/update_version_1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#cccccc" />

    <TextView
        android:id="@+id/txtVersion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/update_version_2"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#cccccc" />

    <ImageView
        android:id="@+id/imgUpVersion"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/download_white" />

    <ProgressBar
        android:id="@+id/pbVer"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/txtVersion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/update_version_3"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#aaaaaa"
        android:visibility="invisible" />

</LinearLayout>
