<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_gradient"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/llLogin"
    android:orientation="vertical"
    android:keyboardNavigationCluster="true"
    android:backgroundTint="#000000"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >


    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000">

        <WebView
            android:id="@+id/myWebview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:background="#000000"
            android:visibility="invisible">
        </WebView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/login_edittext_alpha"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    >

                    <ImageView
                        android:id="@+id/imgLoginLogo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="15sp"
                        android:layout_gravity="center"
                        android:alpha="0.9"
                        android:src="@drawable/title1"
                        android:scaleType="centerInside"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp"
                    android:layout_weight="0.6"
                    >

                    <Spinner
                        android:id="@+id/spnUsername"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/login_spinner_alpha"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/txtUserCode"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/login_edittext_alpha"
                        android:ems="10"
                        android:gravity="center"
                        android:textSize="19sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spnShift"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/login_spinner_alpha"
                        android:gravity="center" />

                    <mycomponents.MyEditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/login_edittext_alpha"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:background="@drawable/login_button_green"
                        android:text="ورود"
                        android:textColor="#dddddd"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    >



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.55"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/saalogo"
                        android:scaleType="centerInside"/>

                    <TextView
                        android:id="@+id/txtVersionLogin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="top|center"
                        android:layout_weight="0.45"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:text="1"
                        android:textColor="#333333"
                        android:textSize="14sp" />
                </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</LinearLayout>

